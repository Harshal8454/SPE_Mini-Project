pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'calculator'
        GITHUB_REPO_URL = 'https://github.com/Harshal8454/SPE_Mini-Project.git'
        OPTION = 1
        NUMBER = 2
        EXP = 3
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm  // Corrected Git checkout method
                }
            }
        }

        stage('Run Main Application') {
            steps {
                script {
                    sh """
                        ls -l ${WORKSPACE}  # Debugging workspace
                        echo '${OPTION}\n${NUMBER}\n${EXP}' | python3 ${WORKSPACE}/cal.py
                    """
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh """
                        ls -l ${WORKSPACE}  # Debugging workspace
                        python3 ${WORKSPACE}/test.py
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE_NAME}", "-f ${WORKSPACE}/Dockerfile ${WORKSPACE}")
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'DockerHubCred') {
                        sh 'docker tag calculator harshal8454/calculator:latest'
                        sh 'docker push harshal8454/calculator'
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: "${WORKSPACE}/Deploy.yml",
                        inventory: "${WORKSPACE}/Inventory"
                    )
                }
            }
        }
    }
}
